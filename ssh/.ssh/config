# Base GitHub config
Host github.com
    HostName github.com
    ServerAliveInterval 60

# Primary GitHub identity
Host primary-gh
    HostName github.com
    User git
    IdentitiesOnly yes
    IdentityFile ~/.ssh/ed25519_primary

# EveryoungAI GitHub identity
Host everyoungai-gh
    HostName github.com
    User git
    IdentitiesOnly yes
    IdentityFile ~/.ssh/ed25519_everyoung.pub

# NixOS host
Host nixos
    HostName nixos
    User aris
    ForwardAgent yes

# Ubuntu WSL host
Host ubuntu-wsl
    HostName ubuntu-wsl
    User alex
    ForwardAgent yes
