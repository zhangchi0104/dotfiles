{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "model": "google-vertex-anthropic/claude-opus-4-5@20251101",
  "small_model": "google-vertex-anthropic/claude-haiku-4-5@20251001",
  "autoupdate": true,
  "mcp": {
    "serena": {
      "enabled": true,
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
      ],
    },
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true,
    },
  },
  "permission": {
    "edit": {
      "*": "ask",
    },
  },
}
